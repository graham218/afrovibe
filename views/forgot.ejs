<!DOCTYPE html>
<html lang="en" data-theme="afrovibe">
  <%- include('partials/head.ejs', { pageTitle: 'Forgot Password' }) %>
  <body class="min-h-screen flex flex-col bg-[#000] text-white relative isolation-isolate">
    <%- include('partials/navbar.ejs') %>

    <div aria-hidden="true"
         class="pointer-events-none absolute inset-0 -z-10
                bg-[radial-gradient(60%_50%_at_50%_0%,rgba(255,107,107,.10),transparent_60%),radial-gradient(60%_40%_at_80%_100%,rgba(254,202,87,.08),transparent_60%)]">
    </div>

    <main class="flex-1">
      <section class="max-w-md mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
        <h1 class="text-2xl md:text-3xl font-extrabold mb-6">
          <span class="bg-gradient-to-r from-[#FF6B6B] to-[#FECA57] bg-clip-text text-transparent">Forgot Password</span>
        </h1>

        <% if (typeof message === 'string' && message) { %>
          <div class="mb-4 rounded-xl bg-black/60 backdrop-blur-xl border border-white/10 p-3 text-sm">
            <%= message %>
          </div>
        <% } %>

        <div class="rounded-3xl bg-black/60 backdrop-blur-xl border border-white/10 shadow-[0_12px_40px_-12px_rgba(0,0,0,.65)] p-6">
          <p class="text-sm text-white/80 mb-4">
            Enter the email associated with your account. We’ll send instructions to reset your password.
          </p>

          <form method="post" action="/forgot" class="space-y-4">
            <label class="form-control w-full">
              <span class="label-text mb-1 text-white/80">Email</span>
              <input type="email" name="email" required
                     class="input input-bordered w-full bg-black/40 text-white placeholder-white/40 border-white/20
                            focus:border-transparent focus:outline-none focus:ring-2 focus:ring-[#FF6B6B]"
                     placeholder="you@example.com" />
            </label>

            <div class="flex items-center justify-between">
              <a href="/login" class="btn btn-ghost rounded-full text-white/80 hover:bg-white/10">← Back to login</a>
              <button type="submit"
                      class="btn rounded-full text-black border-0 bg-gradient-to-r from-[#FF6B6B] to-[#FECA57] hover:shadow-xl hover:scale-[1.02]">
                Send reset link
              </button>
            </div>
          </form>
        </div>
      </section>
    </main>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
