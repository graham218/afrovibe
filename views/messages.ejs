<!DOCTYPE html>
<html lang="en" data-theme="afrovibe">
<head>
  <%- include('partials/head.ejs', { pageTitle: 'Messages' }) %>
</head>
<body class="bg-base-100 min-h-screen flex flex-col">
  <%- include('partials/navbar.ejs', { currentUser, unreadMessages, unreadNotificationCount }) %>

  <!-- Current user id for client JS -->
  <input type="hidden" id="currentUserId" value="<%= currentUser?._id %>">

  <main class="flex-1 max-w-6xl mx-auto w-full p-4 grid grid-cols-1 md:grid-cols-3 gap-4">
    <!-- LEFT: Thread list -->
    <aside class="md:col-span-1">
      <div class="flex items-center justify-between mb-3">
        <h1 class="text-xl font-semibold">Messages</h1>
        <div class="flex items-center gap-2">
          <button id="enterManage"   class="btn btn-ghost btn-xs">Manage</button>
          <button id="cancelManage"  class="btn btn-ghost btn-xs hidden">Cancel</button>
          <button id="deleteThreads" class="btn btn-error btn-xs hidden">Delete</button>
        </div>
      </div>

      <ul id="threadList" class="menu bg-base-100 rounded-2xl border border-base-300/70 overflow-hidden shadow-sm">
        <% (matches || []).forEach(u => {
             const p0 = u?.profile?.photos?.[0] || '/images/default-avatar.png';
             const unread = (unreadBy && unreadBy[String(u._id)]) || 0;
             const last = u.lastMessage || null;
             const fromMe = last && String(last?.sender?._id) === String(currentUser._id);
             const preview = last ? String(last.content || '').slice(0, 60) : 'No messages yet';
             const ts = last?.createdAt
               ? (last.createdAt.toLocaleString ? last.createdAt.toLocaleString() : new Date(last.createdAt).toLocaleString())
               : '';
        %>
          <li class="border-b last:border-0" data-user-id="<%= u._id %>">
            <a href="/chat/<%= u._id %>" class="rowLink flex items-center gap-3 py-3 px-3 hover:bg-base-200/50 transition">
              <!-- Avatar -->
              <div class="avatar">
                <div class="w-10 h-10 rounded-full ring ring-base-300 ring-offset-2 overflow-hidden">
                  <img src="<%= p0 %>" alt="<%= u.username %> avatar" class="object-cover">
                </div>
              </div>

              <!-- Text -->
              <div class="min-w-0 flex-1">
                <div class="flex items-center gap-2">
                  <div class="truncate <%= unread ? 'font-semibold' : 'font-medium' %>"><%= u.username %></div>
                  <% if (unread) { %>
                    <span class="badge badge-error badge-sm" data-unread-for="<%= u._id %>"><%= unread %></span>
                  <% } else { %>
                    <span class="badge badge-error badge-sm hidden" data-unread-for="<%= u._id %>">0</span>
                  <% } %>
                </div>
                <div class="flex items-center gap-2 text-xs">
                  <div class="truncate <%= unread ? 'font-semibold' : 'opacity-70' %>">
                    <% if (last) { %>
                      <%= fromMe ? 'You: ' : (u.username + ': ') %><%= preview %>
                    <% } else { %>
                      No messages yet
                    <% } %>
                  </div>
                  <% if (ts) { %>
                    <span class="opacity-50 shrink-0">â€¢</span>
                    <time class="opacity-60 shrink-0"><%= ts %></time>
                  <% } %>
                </div>
              </div>

              <!-- Checkbox (Manage mode) -->
              <input
                type="checkbox"
                class="checkbox checkbox-xs threadChk hidden ml-2"
                data-user-id="<%= u._id %>"
                aria-label="Select conversation for deletion" />
            </a>
          </li>
        <% }) %>

        <% if (!matches || matches.length === 0) { %>
          <li class="p-6 text-center text-sm opacity-70">No matches yet. Start liking to create matches!</li>
        <% } %>
      </ul>

      <p id="manageTip" class="text-[12px] opacity-60 mt-2 hidden">
        Select conversations to delete. This hides the thread for you.
      </p>
    </aside>

    <!-- RIGHT: Empty state panel (chat opens on /chat/:id) -->
    <section class="md:col-span-2">
      <div class="card bg-base-100 border border-base-300/70 rounded-2xl shadow-sm h-full grid place-items-center p-8">
        <div class="text-center space-y-2">
          <div class="text-2xl font-semibold">Select a conversation</div>
          <div class="opacity-70">Click any match on the left to open the chat thread.</div>
        </div>
      </div>
    </section>
  </main>

  <%- include('partials/modals.ejs') %>
  <%- include('partials/footer.ejs') %>

  <!-- JS -->
  <script src="/socket.io/socket.io.js" nonce="<%= typeof cspNonce !== 'undefined' ? cspNonce : '' %>" defer></script>
  <script src="/js/socket.helper.js"      nonce="<%= typeof cspNonce !== 'undefined' ? cspNonce : '' %>" defer></script>
  <script src="/js/page-messages.js?v=5"  nonce="<%= typeof cspNonce !== 'undefined' ? cspNonce : '' %>" defer></script>
</body>
</html>
