    <ul class="menu menu-horizontal px-1 text-[15px]">
      <li><a href="/dashboard" class="text-white/95 hover:text-white">Home</a></li>
      <li>
        <a href="/messages" class="text-white/95 hover:text-white">
          Messages
          <span class="badge badge-error badge-sm nav-unread-messages ml-1 <%= (typeof unreadMessages !== 'undefined' && unreadMessages > 0) ? '' : 'hidden' %>">
            <%= typeof unreadMessages !== 'undefined' && unreadMessages > 0 ? unreadMessages : '' %>
          </span>
        </a>
      </li>
      <li><a href="/matches" class="text-white/95 hover:text-white">Matches</a></li>

      <!-- Desktop: Connections -->
