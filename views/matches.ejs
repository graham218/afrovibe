<!DOCTYPE html>
<html lang="en" data-theme="afrovibe">
<head>
  <%- include('partials/head.ejs', { pageTitle: 'Matches' }) %>
</head>
<body class="bg-base-100 min-h-screen flex flex-col">
  <%- include('partials/navbar.ejs', { currentUser, unreadMessages, unreadNotificationCount }) %>

    <main class="container mx-auto px-5 md:px-6 py-6 flex-grow">
      <!-- Section header -->
      <header class="flex items-center justify-between mb-5">
        <div>
          <h1 class="text-lg md:text-xl font-semibold">Matches</h1>
          <p class="text-xs md:text-sm opacity-70">Message mutual matches, or like back to unlock chat.</p>
        </div>
        <a href="/advanced-search" class="btn btn-sm btn-outline">Filters</a>
      </header>

      <% if (!matches || matches.length === 0) { %>
        <div class="max-w-xl mx-auto bg-base-200 rounded-2xl p-8 text-center">
          <p>No matches yet. Keep discovering on the dashboard.</p>
          <a href="/dashboard" class="btn btn-primary mt-3">Discover</a>
        </div>
      <% } %>

      <!-- Grid -->
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        <% (matches || []).forEach(m => {
             const photos = (m.profile?.photos || []);
             const photo  = photos[0] || '/images/default-avatar.png';
             const cityCountry = [m.profile?.city, m.profile?.country].filter(Boolean).join(', ');
             const isOnline = m.lastActive && (Date.now() - new Date(m.lastActive).getTime() < 5*60*1000);
        %>
          <article class="card bg-base-100 border border-base-300 shadow-sm hover:shadow-md transition-shadow rounded-2xl overflow-hidden">
            <!-- Photo / badges -->
            <div class="relative">
              <img src="<%= photo %>" alt="<%= m.username %>" class="w-full aspect-[4/5] object-cover">

              <!-- Top-left chips -->
              <div class="absolute left-2 top-2 flex items-center gap-1">
                <% if (m.isNew) { %>
                  <span class="badge badge-xs rounded-full bg-accent text-white border-0">NEW</span>
                <% } %>
                <% if (m.verifiedAt) { %>
                  <span class="badge badge-xs rounded-full bg-emerald-600 text-white border-0">Verified</span>
                <% } %>
                <% if (isOnline) { %>
                  <span class="badge badge-xs rounded-full bg-info text-white border-0">Online</span>
                <% } %>
              </div>

              <!-- Unread bubble -->
              <% if (m.unreadCount > 0) { %>
                <span class="absolute top-2 right-2 badge badge-error badge-sm"><%= m.unreadCount > 99 ? '99+' : m.unreadCount %></span>
              <% } %>
            </div>

            <!-- Body -->
            <div class="p-3">
              <div class="flex items-start justify-between gap-2">
                <h3 class="text-[16px] font-semibold leading-tight truncate">
                  <%= m.username %><% if (m.profile?.age) { %>, <%= m.profile.age %><% } %>
                </h3>

                <!-- Subtle online dot (secondary cue) -->
                <% if (isOnline) { %>
                  <span class="mt-0.5 inline-flex items-center">
                    <span class="w-2 h-2 rounded-full bg-success mr-1"></span>
                    <span class="text-[11px] opacity-70">now</span>
                  </span>
                <% } %>
              </div>

              <p class="text-xs opacity-70 mt-1 truncate">
                <%= cityCountry || 'â€”' %>
              </p>

              <% if (m.lastMessage) { %>
                <div class="mt-3 text-[12px] bg-base-200 rounded-lg p-2">
                  <span class="opacity-70"><%= m.lastMessage.mine ? 'You: ' : '' %></span>
                  <span class="line-clamp-2"><%= m.lastMessage.content %></span>
                  <div class="text-[10px] opacity-60 mt-1">
                    <%= new Date(m.lastMessage.createdAt).toLocaleString([], { hour: '2-digit', minute: '2-digit', month: 'short', day: 'numeric' }) %>
                  </div>
                </div>
              <% } %>

              <!-- Actions -->
              <div class="mt-3 grid grid-cols-2 gap-2">
                <a href="/users/<%= m._id %>" class="btn btn-ghost btn-xs border border-base-300">Profile</a>

                <% if (m.isMutual) { %>
                  <a class="btn btn-primary btn-xs" href="/chat/<%= m._id %>">Message</a>
                <% } else if (m.likedMeOnly) { %>
                  <button class="btn btn-outline btn-xs like-back" data-user-id="<%= m._id %>" data-username="<%= m.username %>">
                    ðŸ’œ Like back
                  </button>
                <% } else { %>
                  <button class="btn btn-ghost btn-xs border border-base-300" disabled>Pending</button>
                <% } %>
              </div>
            </div>
          </article>
        <% }) %>
      </div>
    </main>

    <%- include('partials/footer.ejs') %>

    <!-- Page script (CSP-safe) -->
    <script nonce="<%= cspNonce %>" src="/js/matches.js" defer></script>
  </body>
</html>
