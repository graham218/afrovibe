  <!-- üî• INTERACTIVE CAROUSEL JAVASCRIPT üî• -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const carousel = document.getElementById('interactiveCarousel');
      const images = carousel.querySelectorAll('.carousel-item img');
      const dotsContainer = document.getElementById('carouselDots');
      
      // Create navigation dots
      images.forEach((_, index) => {
        const dot = document.createElement('div');
        dot.className = 'carousel-dot';
        dot.onclick = () => {
          const scrollLeft = index * 450;
          carousel.scrollTo({ left: scrollLeft, behavior: 'smooth' });
        };
        dotsContainer.appendChild(dot);
      });

      // Auto-scroll
      let scrollInterval = setInterval(() => {
        carousel.scrollLeft += 3;
        if (carousel.scrollLeft >= carousel.scrollWidth - carousel.clientWidth) {
          carousel.scrollLeft = 0;
        }
      }, 50);

      // Pause on hover
      carousel.addEventListener('mouseenter', () => clearInterval(scrollInterval));
      carousel.addEventListener('mouseleave', () => {
        scrollInterval = setInterval(() => {
          carousel.scrollLeft += 3;
          if (carousel.scrollLeft >= carousel.scrollWidth - carousel.clientWidth) {
            carousel.scrollLeft = 0;
          }
        }, 50);
      });

      // Update active dot on scroll
      let activeDotIndex = 0;
      carousel.addEventListener('scroll', () => {
        const scrollLeft = carousel.scrollLeft;
        const newIndex = Math.round(scrollLeft / 450);
        if (newIndex !== activeDotIndex) {
          document.querySelectorAll('.carousel-dot').forEach((dot, i) => {
            dot.classList.toggle('active', i === newIndex);
          });
          activeDotIndex = newIndex;
        }
      });
    });
  </script>
